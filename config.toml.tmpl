model = "gpt-5.1-codex-max"
model_reasoning_effort = "high"
# model_reasoning_summary = "concise"

[projects."/Users/tennisonchan/Developer/truewind-core"]
trust_level = "trusted"
approval_policy = "never"

[projects."/Users/tennisonchan/.codex"]
trust_level = "trusted"

[projects."/Users/tennisonchan/Developer/personal-assistant"]
trust_level = "trusted"

[mcp_servers.chrome-devtools]
command = "npx"
args = ["chrome-devtools-mcp@latest"]
startup_timeout_sec = 20.0

[mcp_servers.context7]
command = "npx"
args = ["-y", "@upstash/context7-mcp", "--api-key", "${CONTEXT7_API_KEY}"]
startup_timeout_sec = 20.0

[mcp_servers.linear]
command = "npx"
args = ["-y", "mcp-remote", "https://mcp.linear.app/sse"]
env = { "LINEAR_API_KEY" = "${LINEAR_API_KEY}" }
startup_timeout_sec = 20.0

[mcp_servers.notion]
command = "npx"
args = ["-y", "@notionhq/notion-mcp-server"]
env = { "NOTION_TOKEN" = "${NOTION_TOKEN}" }
startup_timeout_sec = 20.0

[mcp_servers.playwright]
command = "npx"
args = ["@playwright/mcp@latest"]
startup_timeout_sec = 20.0

[mcp_servers.sentry]
command = "npx"
args = ["-y", "@sentry/mcp-server"]
env = { "SENTRY_ACCESS_TOKEN" = "${SENTRY_ACCESS_TOKEN}", "SENTRY_HOST" = "truewind-ai.sentry.io" }
startup_timeout_sec = 20.0

